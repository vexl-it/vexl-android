<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<ImageButton
		android:id="@+id/close"
		style="@style/Widget.Vexl.CloseButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:src="@drawable/ic_close_x"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<com.google.android.material.card.MaterialCardView
		style="@style/Widget.Vexl.CardView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginHorizontal="8dp"
		android:background="@color/white"
		app:cardElevation="4dp"
		app:cardCornerRadius="20dp"
		app:layout_constraintTop_toBottomOf="@id/close"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/parent"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/groups_join_title"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:textAppearance="@style/TextAppearance.Vexl.Groups.JoinCode.Title"
				android:text="@string/groups_enter_code_description"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent" />

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/group_code_input"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined.Gray"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="24dp"
				android:textColor="@color/gray_4"
				android:hint="@string/groups_enter_code_hint"
				android:inputType="number"
				app:layout_constraintTop_toBottomOf="@id/groups_join_title"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				tools:text="326126" />

		</androidx.constraintlayout.widget.ConstraintLayout>


	</com.google.android.material.card.MaterialCardView>

	<Button
		android:id="@+id/continue_btn"
		style="@style/Widget.Vexl.Button"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="16dp"
		android:layout_marginBottom="44dp"
		android:text="@string/general_continue"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>