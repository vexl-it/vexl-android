	</style>

	<style name="Widget.Cleevio.Onboarding.TextView.FingerPrint.Subtitle" parent="">
		<item name="android:gravity">center_horizontal</item>
		<item name="android:textColor">@null</item>
		<item name="android:textAppearance">@style/TextAppearance.LightBase.Onboarding.TextView.FingerPrint.Subtitle</item>
	</style>

	<style name="Widget.Cleevio.Onboarding.Button.FingerPrint.Activate" parent="Widget.MaterialComponents.Button.UnelevatedButton">
		<item name="android:textAppearance">@style/TextAppearance.LightBase.Onboarding.Button.FingerPrint.Activate</item>
		<item name="backgroundTint">@color/onboarding_fingerprint_button_background</item>
		<item name="android:textColor">@color/onboarding_fingerprint_button_text_color</item>
	</style>

	<style name="Widget.LightBase.Pin.TextView.NumberPad" parent="TextAppearance.MaterialComponents.Headline4">
		<item name="android:padding">8dp</item>
		<item name="android:gravity">center</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:textColor">@null</item>
		<item name="android:textAppearance">@style/TextAppearance.LightBase.Pin.TextView.NumberPad
		</item>
	</style>

	<style name="Widget.LightBase.Pin.TextView.PinTitle" parent="TextAppearance.MaterialComponents.Headline4">
