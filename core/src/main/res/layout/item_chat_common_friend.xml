<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="8dp">

	<com.google.android.material.imageview.ShapeableImageView
		android:id="@+id/profile_image"
		android:layout_width="62dp"
		android:layout_height="62dp"
		android:background="@color/white"
		android:scaleType="fitXY"
		android:src="@drawable/ic_default_avatar"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintDimensionRatio="1:1"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Cleevio.Vexl.AvatarImage" />

	<TextView
		android:id="@+id/name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:textAppearance="@style/TextAppearance.Vexl.ParagraphSmall"
		android:textColor="@color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/profile_image"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Kristin Watson" />

	<TextView
		android:id="@+id/description"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:textAppearance="@style/TextAppearance.Vexl.Description"
		android:textColor="@color/gray_2"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/profile_image"
		tools:text="(219) 555-0114" />

</androidx.constraintlayout.widget.ConstraintLayout>