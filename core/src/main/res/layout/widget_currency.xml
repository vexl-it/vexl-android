<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<com.google.android.material.card.MaterialCardView
		style="@style/Widget.Vexl.Filters.FilterCardView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/location_items_wrapper">

		<RadioGroup
			android:id="@+id/currency_radiogroup"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="4dp">

			<RadioButton
				android:id="@+id/currency_czk"
				style="@style/Widget.Cleevio.Vexl.TabbedRadioBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight=".5"
				android:background="@drawable/widget_location_radio_selector"
				android:button="@android:color/transparent"
				android:gravity="center"
				android:text="@string/currency_czk" />

			<RadioButton
				android:id="@+id/currency_eur"
				style="@style/Widget.Cleevio.Vexl.TabbedRadioBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight=".5"
				android:background="@drawable/widget_location_radio_selector"
				android:button="@android:color/transparent"
				android:gravity="center"
				android:text="@string/currency_eur" />

			<RadioButton
				android:id="@+id/currency_usd"
				style="@style/Widget.Cleevio.Vexl.TabbedRadioBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight=".5"
				android:background="@drawable/widget_location_radio_selector"
				android:button="@android:color/transparent"
				android:checked="true"
				android:gravity="center"
				android:text="@string/currency_usd" />

		</RadioGroup>
	</com.google.android.material.card.MaterialCardView>
</merge>
